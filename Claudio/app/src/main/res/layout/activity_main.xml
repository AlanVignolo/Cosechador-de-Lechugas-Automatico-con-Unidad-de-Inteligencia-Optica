<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manteca"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLAUDIO"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/verde_oscuro"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textColor="@color/verde_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_estado_sistema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectado"
                android:textColor="@color/verde_lechuga"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/blanco"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sección 1"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layout_seccion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/blanco"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sección 2"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layout_seccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_historial"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ver Historial"
            android:textColor="@color/blanco"
            android:background="@color/verde_oscuro"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tv_lechugas_cosechadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lechugas cosechadas: 0"
                android:textColor="@color/verde_oscuro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_tiempo_medio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo medio: 45 días"
                android:textColor="@color/verde_oscuro"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_escanear"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Escanear"
                    android:textColor="@color/blanco"
                    android:background="@color/verde_oscuro"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_referenciar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Referenciar"
                    android:textColor="@color/blanco"
                    android:background="@color/verde_oscuro"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_frenar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Frenar"
                    android:textColor="@color/blanco"
                    android:background="@color/amarillo_claro"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_apagar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Apagar"
                    android:textColor="@color/blanco"
                    android:background="@color/rojo_apagar"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Botón desarrollador -->
            <Button
                android:id="@+id/btn_desarrollador"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="DESARROLLADOR"
                android:textColor="@color/blanco"
                android:background="@color/negro"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>